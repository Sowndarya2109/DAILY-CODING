class Solution {
    public ArrayList<Integer> getMinMax(int[] arr){
        ArrayList<Integer> num = new ArrayList<>();
        int min = arr[0];
        int max = arr[0];
        for(int i=0; i<arr.length; i++){
            if(arr[i] < min)
            min = arr[i];
            if(arr[i] > max)
            max = arr[i];
        }
        num.add(min);
        num.add(max);
        return num;
    }
}
