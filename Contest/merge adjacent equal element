class Solution {
    public List<Long> mergeAdjacent(int[] nums) {
        int n = nums.length, idx = 0;
        List<Long> arr = new ArrayList<>();
        for(int i=0; i<n; i++){
            long curr = nums[i];
            while(!arr.isEmpty() && arr.get(arr.size()-1) == curr){
                curr += arr.remove(arr.size()-1);
            }
            arr.add(curr);
        }
        return arr;
    }
}
