

class Solution {
    public int[] findMaxRow(int mat[][], int N) {
        int max = 0;
        int row = 0;
        for(int i=0; i<N; i++){
            int count = 0;
            for(int j=0; j<N; j++){
                if(mat[i][j] == 1)
                count++;
            }
            if(count > max){
                max = count;
                row = i;
            }
        }
        return new int[]{row, max};
    }
}
