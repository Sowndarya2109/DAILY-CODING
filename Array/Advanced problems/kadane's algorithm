class Solution {
    int maxSubarraySum(int[] arr) {
        int n = arr.length;
        int sum = 0;
        int largest = arr[0];

        for(int i=0; i<n; i++){
            sum += arr[i];
            if(sum > largest){
               largest = sum;
            }
            if(sum < 0)
            sum = 0;
        }
        return largest;
    }
}
