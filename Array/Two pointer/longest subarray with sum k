// User function Template for Java

class Solution {
    public int longestSubarray(int[] arr, int k) {
        int sum = 0, maxlen = 0;
        int n = arr.length;
        HashMap<Integer, Integer> map = new HashMap<>();
        for(int i=0; i<n; i++){
            sum += arr[i];
            
        if(sum == k)
        maxlen = i+1;
        
        if(map.containsKey(sum-k))
        maxlen = Math.max(maxlen, i-map.get(sum-k));
        
        if(!map.containsKey(sum))
        map.put(sum, i);
        }
        return maxlen;
    }
}
