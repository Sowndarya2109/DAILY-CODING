class Solution {
    public int[] intersection(int[] nums1, int[] nums2) {
        HashSet<Integer> set = new HashSet<>();
        HashSet<Integer> arr = new HashSet<>();
        for(int x : nums1)
        set.add(x);
        for(int x : nums2){
            if(set.contains(x)){
                arr.add(x);
            }
        }
        int res[] = new int[arr.size()];
        int idx = 0;
        for(int x : arr)
        res[idx++] = x;
        return res;
    }
}
